/* TRANSPARENCIES IN BASE (TODO: Add/rethink theme vars) */

black10a = rgba(0, 0, 0, 10)
black20a = rgba(0, 0, 0, 20)

Fernanda--TabWidgetButton,
Fernanda--CollapsibleWidgetHeader {
    qproperty-backgroundColor: transparent;
    qproperty-hoverColor: rgba(0, 0, 0, 30);
    qproperty-pressedColor: rgba(0, 0, 0, 40);
}

QMenuBar::item {
    background-color: transparent;
}

QMenu::item:selected,
QMenuBar::item:selected {
    background-color: {{black10a}};
}

QMenu::item:pressed,
QMenuBar::item:pressed {
    background-color: {{black20a}};
}

/* TODO: Undecided on tab state transparencies */

